body { min-height: 100%; background-color: #f7f7f7; }
.content { overflow: hidden; }
.content-search { height: 28px; width: 100%; padding: 9px 0; background-color: #fff; }
.content-search__input { display: inline-block; width: 80%; height: 28px; margin-left: 9px; background-color: #eeeeee; border: 1px solid #e6e6ea; border-radius: 4px; overflow: hidden; }
.content-search__input input { float: left; width: 90%; height: 28px; font-size: 15px; color: #262626; padding-left: 9px; box-sizing: border-box; }
.content-search__input .delete { float: left; width: 28px; height: 28px; }
.content-search__input .delete-ico { margin:8px 0 0 9px; width: 12px; height: 12px; }
.content-search__btn { float: right; width: 50px; height: 28px; line-height: 28px; font-size: 15px; color: #262626; text-align: center; }
.content-main { overflow: hidden; padding-top: 4px; background-color: #f7f7f7; }
.content-item { position: relative; width: 177px; padding: 4px 0 0 4px; float: left; overflow: hidden; box-sizing: border-box; }
.content-item__type { position: absolute; right: 4px; top: 8px; width: 27px; height: 19px; }
.content-item.is-active .content-item__cover{ display: block; }
.content-item__cover { display: none; position: absolute; left: 4px; top: 4px; width: 172px; height: 190px; background-color: #000; opacity: .2; border-radius: 4px; }
.content-item__Img { display: block; width: 100%; height: 152px; border-top-left-radius: 4px; border-top-right-radius: 4px; background-color: #fff; }
.content-item__txt { display: block; height: 38px; line-height: 38px; text-indent: 10px; background-color: #fff; color: #282828; font-size: 14px; border-bottom-left-radius: 4px; border-bottom-right-radius: 4px; }
.content-result { width: 163px; margin: 110px auto 0; text-align: center; }
.content-result__img { display: block; width: 108px; height: 112px; margin: 0 auto 14px; }
.content-result__tips { display: block; font-size: 15px; color: #212a49; line-height: 19px; }
.content-tips { text-align: center; font-size: 14px; line-height: 14px; background-color: #f7f7f7; padding: 57px 0; color: #cbcbcb; }
.hide { display: none; }
.show { display: block; }