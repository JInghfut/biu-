
body {
    min-height: 100%;
    background-color: #ededed;
}

.content {
    overflow: hidden;
}

.content-main {
    overflow: hidden;
    padding-top: 4px;
    background-color: #ededed;
}

.content-item {
    position: relative;
    width: 50%;
    padding: 4px 0 0 4px;
    float: left;
    overflow: hidden;
    box-sizing: border-box;
}

.content-item__type {
    position: absolute;
    right: 4px;
    top: 8px;
    width: 27px;
    height: 19px;
}

.content-item.is-active .content-item__cover {
    display: block;
}

.content-item__cover {
    display: none;
    position: absolute;
    left: 4px;
    top: 4px;
    width: 172px;
    height: 190px;
    background-color: #000;
    opacity: .2;
    border-radius: 4px;
}

.content-item__Img {
    display: block;
    width: 100%;
    height: 152px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    background-color: #fff;
}

.content-item__txt {
    display: block;
    height: 38px;
    line-height: 38px;
    text-indent: 10px;
    background-color: #fff;
    color: #282828;
    font-size: 14px;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}

.content-tips {
    text-align: center;
    font-size: 14px;
    line-height: 14px;
    background-color: #ededed;
    padding: 57px 0;
    color: #cbcbcb;
}

.hide {
    display: none;
}

.show {
    display: block;
}